<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".TelaArtistaActivity">

    <ImageView
        android:id="@+id/setaVoltar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/seta"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        tools:ignore="ContentDescription"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/artista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/font"
        android:text="@string/art1"
        android:textColor="@color/white"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.26"
        app:layout_constraintStart_toEndOf="@id/setaVoltar"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- GRID PRINCIPAL -->
    <GridLayout
        android:id="@+id/grid_artista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:columnCount="1"
        android:gravity="center"
        android:rowCount="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.398"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/artista">

        <LinearLayout
            android:id="@+id/art1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_margin="2dp"
                android:background="@drawable/circulo"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/art1"
                tools:ignore="ContentDescription,UnusedAttribute" />
        </LinearLayout>

    <GridLayout
        android:id="@+id/grid_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="20dp"
        android:columnCount="1"
        android:gravity="center"
        android:rowCount="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.398"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/art1">

        <TextView
            android:id="@+id/title6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/font"
            android:text="@string/tittle6"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@id/scrollalbum" />

        <HorizontalScrollView
            android:id="@+id/scrollalbum2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:id="@+id/alb5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="121dp"
                        android:layout_height="115dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/albumbox"
                        android:text="@string/alb1"
                        android:gravity="center"
                        android:fontFamily="@font/font"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/alb6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="121dp"
                        android:layout_height="115dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/albumbox"
                        android:text="@string/alb2"
                        android:gravity="center"
                        android:fontFamily="@font/font"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/alb7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="121dp"
                        android:layout_height="115dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/albumbox"
                        android:text="@string/alb3"
                        android:gravity="center"
                        android:fontFamily="@font/font"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/alb8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="121dp"
                        android:layout_height="115dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/albumbox"
                        android:text="@string/alb4"
                        android:gravity="center"
                        android:fontFamily="@font/font"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/tittle5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/font"
            android:text="@string/tittle5"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@id/scrollalbum" />

        <HorizontalScrollView
            android:id="@+id/scrollalbum3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:id="@+id/alb9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="121dp"
                        android:layout_height="115dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/albumbox"
                        android:text="@string/alb1"
                        android:gravity="center"
                        android:fontFamily="@font/font"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/alb10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="121dp"
                        android:layout_height="115dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/albumbox"
                        android:text="@string/alb2"
                        android:gravity="center"
                        android:fontFamily="@font/font"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/alb11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="121dp"
                        android:layout_height="115dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/albumbox"
                        android:text="@string/alb3"
                        android:gravity="center"
                        android:fontFamily="@font/font"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/alb12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="121dp"
                        android:layout_height="115dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/albumbox"
                        android:text="@string/alb4"
                        android:gravity="center"
                        android:fontFamily="@font/font"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>
    </GridLayout>
    </GridLayout>

    <!-- Navegação inferior -->
    <LinearLayout
        android:id="@+id/navegacao"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <GridLayout
            android:id="@+id/barranav"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:columnCount="3"
            android:rowCount="1">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="40dp"
                android:src="@drawable/home"
                android:layout_gravity="center" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="110dp"
                android:src="@drawable/search"
                android:layout_gravity="center" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="90dp"
                android:src="@drawable/library"
                android:layout_gravity="center" />
        </GridLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>